{% extends 'layout.html.twig' %}

{% set current_navigation_id = 'vacancies' %}
{% block title %}New Auditions Advert{% endblock %}

{% block body %}

{% set current_subnav_id = 'manage_adverts' %}
{{ render(controller('Acts\\CamdramBundle\\Controller\\ShowController::adminPanelAction', {show: show})) }}

<h3>New Auditions Advert</h3>

<div class="panel">
    <p>
        Use the form below add a new auditions advertisement for your show.
    </p>
    <p>
        You can add one or more audition sessions and/or leave contact details for people to get
        in touch about auditioning.
    </p>
    <p>
        The CUADC Actors' Reps aim to send out the Actors' mailing list with all the current
        auditions on Camdram twice a week during Full Term. For more information they can be
        contacted on <a href=mailto:actor@cuadc.org>actor@cuadc.org</a>.
    </p>
    <p>{{ include('markdown_notice.html.twig', { thing: 'advertisement' }) }}</p>
    <p>
        Please ensure you have your team members' permission <em>before</em> adding their contact
        details to the advert!
    </p>
</div>

{{ form_start(form, {'action': path("post_show_advert", {identifier: show.slug} )}) }}
{{ include('show/advert-form.html.twig') }}
{{ form_end(form) }}

{% endblock %}
