{% extends 'layout.html.twig' %}

{% block title %}Show - {{ form.vars.value.name }} - Edit{% endblock %}

{% block body %}

{% set current_subnav_id = 'edit_show' %}
{{ render(admin_panel(form.vars.value)) }}

<div class="row">
    <h3>Edit Show</h3>
    {{ form_start(form, {'action': path("acts_camdram_show_put", {identifier: form.vars.value.slug} )}) }}

    {% include 'show/form.html.twig' %}

    <div class="text-right">
        <input type="submit" value="Save" class="button"/>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}

{% block compiled_assets -%}
    {{ encore_entry_link_tags('html-forms') }}
    {{ encore_entry_script_tags('html-forms') }}
{%- endblock %}
