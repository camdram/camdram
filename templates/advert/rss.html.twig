<p>{{ entity.summary | camdram_markdown }}</p>

<ul>
{%- for audition in entity.auditions -%}
    <li>{{ audition.dateString }}, {{ audition.location }}</li>
{%- endfor -%}
</ul>

<p>Contact {{ entity.contactDetails | detect_links }} before {{ entity.expiresAt | date('jS M Y H:i')}} for more details.</p>

