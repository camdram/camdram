{% if shows | length > 0 %}
<h5>Unauthorised shows</h5>
<ul class="large-block-list">
    {% for show in shows %}
        <li>
            <div class="panel">
                <h5>{{ link_entity(show) }}</h5>
                <p>{% include 'performance/show.html.twig' with {'performances': show.performances } %}</p>
                <p>{{ show.description | camdram_markdown | truncateHTML(200) }}</p>
            </div>
        </li>
    {% endfor %}
</ul>
{% endif %}
