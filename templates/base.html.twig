<!doctype html>
<html lang="en">
    <head>
    {# Global site tag (gtag.js) - Google Analytics #}
    {% if app.request.headers.get('DNT', '0', true) != "1" %}
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-37770738-2"></script>
    <script>
    {#- begin-CSP-permitted-script -#}
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-37770738-2');
    {#- end-CSP-permitted-script -#}
    </script>
    {% endif %}

    <meta charset="utf-8" />

        {# Block pages from appearing in search engines if dev site #}
        {% if development_warning %}
            <meta name="robots" content="noindex" />
        {% endif %}
        <meta name="keywords" content="camdram,cambridge,theatre,drama,comedy,musicals,shows,society,societies,ACTS,association" />
        <meta name="description" content="Camdram is an information hub for the student performing arts community in Cambridge, England." />

        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <link rel="manifest" href="/manifest.json">

        {# Opengraph properties for facebook posts #}
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="en_GB" />
        <meta property="og:site_name" content="Camdram" />
        <meta property="fb:app_id" content="{{ facebook_id }}" />
        {% block opengraph %}{% endblock %}

        <link rel='icon' href='/favicon.png' type='image/png' />

        <title>{% block title %}{% endblock %} - Camdram</title>

        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />
        <link href="https://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet"/>
        {% block stylesheets %}{% endblock %}

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <script src="{{ asset('build/typeahead.bundle.min.js') }}"></script>
        {% block compiled_assets -%}
            {{ encore_entry_link_tags('base') }}
            {{ encore_entry_script_tags('base') }}
        {%- endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body {{ (body_attribs_raw ?? '') | raw }}>
        <div class="flash-messages">
        {%- for type, messages in app.flashes() -%}
            {%- for message in messages -%}
                <p class="flash-{{type}}" role="alert">{{ message }}</p>
            {%- endfor -%}
        {%- endfor -%}
        </div>

        <div id="wrapper">
            {% if development_warning %}{% include 'dev-warning.html.twig' %}{% endif %}
            {% if show_site_notice %}{% include 'site-notice.html.twig' %}{% endif %}
            {% block main %}{% endblock %}
        </div>

        <footer>
            {% block footer %}{% endblock %}
            <div id="copyright" class="row">
                <p>&copy; Association of Cambridge Theatre Societies and contributing groups 2004â€“{{ "now"|date('Y') }}.
                    Comments &amp; queries to <a href="mailto:support@camdram.net">support@camdram.net</a>
                </p>
            </div>
        </footer>
    </body>
</html>

