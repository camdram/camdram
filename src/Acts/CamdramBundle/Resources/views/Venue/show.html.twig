{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% set current_navigation_id = 'venues' %}
{% block title %}Venue: {{ venue.name }}{% endblock %}

{% block option_links %}
{% include 'ActsCamdramBundle:Navigation:nav-item.html.twig' with { item: {text: 'Edit "'~venue.name~'"', path: path('edit_venue', {identifier: venue.slug}), icon: 'pencil'}} %}

{% if has_role('ROLE_EDITOR') %}
    {% include 'ActsCamdramBundle:Navigation:nav-item.html.twig' with { item: {text: 'Delete "'~venue.name~'"', path: path('remove_venue', {identifier: venue.slug}), icon: 'eraser'}} %}
{% endif %}
{% endblock %}


{% block body %}

      <div class="row">
          <div class="large-12 columns panel">
            <h2>{{ venue.name }}</h2>
            {% if venue.latitude and venue.longitude or venue.image %}
              <div class="row">
                <div class="large-4 columns">
                    {% if venue.image %}<a href="{{ image_url(venue.image, 1024, 768) }}" class="fancybox">{{ render_image(venue.image, 205, 200) }}</a>{% endif %}
                    {% if venue.latitude %}<div class="map-small">{% if venue.latitude %}{% render url('acts_camdram_venues_map', {identifier: venue.slug}) %}{% endif %}</div>{% endif %}
                </div>
                <div class="large-8 columns">
            {% endif %}

            <h5>{% if venue.address %}{{ venue.address }}{% endif %}</h5>
            {% if venue.college %}<p>College: {{ venue.college }}</p>{% endif %}
            <p>{{ venue.description | camdram_markdown }}</p>

            {% if venue.latitude and venue.longitude or venue.image %}
                </div>
            {% endif %}
        </div>
     </div>

     <div class="row">
         <div class="large-12 columns">
             {{ render(url('get_venue_shows', {identifier: venue.slug})) }}
         </div>
    </div>
{% endblock %}

