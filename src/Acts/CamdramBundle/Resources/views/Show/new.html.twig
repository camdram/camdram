{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% block title %}Show: Create{% endblock %}

{% block body %}

<div class="row" id="show_form">
    <div class="twelve columns">
    <h3>Create a new show</h3>
    <div class="panel">
        <p>Please fill in the details below to add a new show to Camdram. Required fields are marked with an asterisk (*),
        and all fields can be modified later if necessary.</p>
        {% if not is_granted('APPROVE', form.vars.data) %}
            <p>When you click 'create', it will be sent to a moderator, who it check it over before it appears on Camdram.</p>
        {% endif %}
    </div>
    <form action="{{ path("post_show") }}" method="post" class="">

        {% include 'ActsCamdramBundle:Show:form.html.twig' %}

        <div class="text-right">
            <input type="submit" value="Create" class="button"/>
        </div>
    </form>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
    $(function() {
        $('#show_form').initPerformances();
    })
</script>
{% endblock %}