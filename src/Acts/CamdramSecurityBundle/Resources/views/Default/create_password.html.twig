{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% block title %}Create password{% endblock %}

{% block body %}
<div class="row">
    <div class="large-12 columns">
    <h4>Create a Camdram password</h4>
        <p>A Camdram password is required to use certain parts of Camdram, including creating content.</p>
        <p>If you already have a Camdram account, please log in using your email and password below to link it to your
        {{ app.user.service | capitalize }} account.</p>

        {{ include('ActsCamdramSecurityBundle:Default:login_form.html.twig', {last_email: app.user.email, error: ''}) }}

    <p>Alternatively, use the form below to create a new account</p>
    <form action="{{ path('acts_camdram_security_create_password') }}" method="post">
        {{ form_errors(form) }}
        {% if form.name is defined %}{{ form_row(form.name) }}{% endif %}
        <div class="row">
            <div class="large-3 columns">{{ form_label(form.password.password) }}</div>
            <div class="large-3 columns">
                {{ form_widget(form.password.password) }}
                {{ form_errors(form.password.password) }}
            </div>
            <div class="large-3 columns">{{ form_label(form.password.confirm) }}</div>
            <div class="large-3 columns">
                {{ form_widget(form.password.confirm) }}
                {{ form_errors(form.password.confirm) }}
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <p>We ask you to enter the following additional information to help us understand who is using Camdram and help improve it in the future.</p>
            </div>
        </div>
        <div class="row">
            <div class="large-3 columns">
                {{ form_label(form.occupation) }}
            </div>
            <div class="large-3 columns">
                {{ form_widget(form.occupation) }}
                {{ form_errors(form.occupation) }}
            </div>
            <div class="large-3 columns">
                {{ form_label(form.graduation) }}
            </div>
            <div class="large-3 columns">
                {{ form_widget(form.graduation) }}
                {{ form_errors(form.graduation) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="row">
            <div class="large-12 text-right"><input type="submit" value="Register" class="button"/></div>
        </div>
    </form>
    </div>
</div>
{% endblock %}
