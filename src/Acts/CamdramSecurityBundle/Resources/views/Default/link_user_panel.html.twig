<div class="panel">
<h5>
    {% if user.type == 'native' %}Camdram account
    {% else %}
        <img src="{{ asset('/bundles/actscamdramsecurity/images/' ~ user.service ~ '.png') }}" alt="{{ user.service | capitalize }}" title="{{ user.service | capitalize }}" width="19" height="19" />
        {{ user.service | capitalize }} account
    {% endif %}
</h5>
{% if user.name %}
    <p><strong>Name:</strong> {{ user.name }}</p>
{% endif %}
{% if user.email %}
    <p><strong>Email:</strong> {{ user.email }}</p>
{% endif %}

    <input type="submit" name="{{ button_name }}" value="Stay logged in with this account" class="button small"/>
</div>
